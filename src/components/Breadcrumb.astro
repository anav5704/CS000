---
import UserMenuWrapper from "@components/UserMenuWrapper.astro"

interface Props {
    lesson: string
    title: string
}

const { lesson, title } = Astro.props
---

<nav
    class="sticky top-0 bg-white flex gap-3 h-16 border-b items-center justify-between px-5 border-zinc-200"
>
    <div class="space-x-3">
        <a href="/">CS000</a>
        <span>{"/"}</span>
        <a href="/lessons">Lessons</a>
        <span>{"/"}</span>
        <a href={`/lessons/${lesson.toLowerCase()}/introduction`}>{lesson}</a>
        <span>{"/"}</span>
        <a href="">{title}</a>
    </div>
    <UserMenuWrapper server:defer>
        <UserMenuWrapper skeleton slot="fallback" />
    </UserMenuWrapper>
</nav>

<style>
    nav > div > a {
        @apply no-underline hover:underline;
    }
</style>
