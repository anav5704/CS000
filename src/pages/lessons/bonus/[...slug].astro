---
export const prerender = true

import Layout from "../../../layouts/lesson.astro"
import { getCollection } from "astro:content"

export async function getStaticPaths() {
    const bonusLessons = await getCollection("bonus")

    return bonusLessons.map((lesson) => ({
        params: { slug: lesson.slug },
        props: { lesson }
    }))
}

const { lesson } = Astro.props
const { Content, headings } = await lesson.render()
---

<Layout lesson="Bonus" title={lesson.data.title} headings={headings}>
    <Content />
</Layout>
